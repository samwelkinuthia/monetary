<%=form_for @transfer do |f|%>
  <div class="field">
    <%=f.label :Recipient%> <br>
    <%=f.text_field :recipient, placeholder: "Enter user email", class:"form-control"%>
  </div>
  <div class="field">
    <%=f.label :Amount%> <br>
    <%=f.text_field :amount, placeholder: "Amount", class:"form-control"%>
  </div>
  <br>
  <div class="field">
    <%=f.submit "Send", class:"btn btn-success"%> <%=link_to "Cancel", dashboard_index_path, class:"btn btn-danger"%>
  </div>
<%end%>
